<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="20dp">

    <TextView
        android:id="@+id/idItemBookOrderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/idItemBookOrderFLPrice"
        android:text="Название книги"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/idItemBookOrderAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idItemBookOrderTitle"
        android:layout_alignStart="@+id/idItemBookOrderTitle"
        android:layout_toLeftOf="@id/idItemBookOrderFLPrice"
        android:text="Автор"
        android:textColor="@color/gray_200" />

    <FrameLayout
        android:id="@+id/idItemBookOrderFLPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/idItemBookOrderTitle"
        android:layout_alignBottom="@id/idItemBookOrderAuthor"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/idItemBookOrderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена руб."
            android:textAlignment="center"
            android:textColor="@color/orange_500"
            android:layout_gravity="center"/>
    </FrameLayout>

</RelativeLayout>