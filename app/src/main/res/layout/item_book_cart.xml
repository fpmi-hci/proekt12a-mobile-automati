<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/white">


        <CheckBox
            android:id="@+id/idItemBookCartCheckbox"
            style="@style/CheckBoxTheme"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/idItemBookCartCover"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/idItemBookCartCheckbox"
            android:scaleType="centerInside"
            android:src="@color/blue_500" />

        <TextView
            android:id="@+id/idItemBookCartTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/idItemBookCartCover"
            android:text="Название книги"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/idItemBookCartAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/idItemBookCartCover"
            android:layout_below="@id/idItemBookCartTitle"
            android:text="Автор"
            android:textColor="@color/gray_200"/>

        <TextView
            android:id="@+id/idItemBookCartFLPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idItemBookCartAuthor"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/idItemBookCartCover"
            android:text="Цена руб."
            android:textColor="@color/orange_500" />

        <ImageButton
            android:id="@+id/idItemBookCartBtnDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@id/idItemBookCartCover"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_delete"
            android:background="@color/transparent"
            app:tint="@color/gray_200" />

</RelativeLayout>